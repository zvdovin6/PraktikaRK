<Page x:Class="Todo.View.Main_empty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="Main_empty" Height="600" Width="800">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/ResourcesTextBox.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/ResourcesButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="-23,0,-31,-31"
           Width="835"
           Height="606">
        <Image HorizontalAlignment="Left" Height="76" Margin="31,10,0,0" VerticalAlignment="Top" Width="75" Source="/image1/image.png"/>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Height="54" Margin="172,127,0,0" VerticalAlignment="Top" Width="306" FontSize="32"/>
        <Label Content="Создайте свою первую задачу!" HorizontalAlignment="Left" Height="73" Margin="172,208,0,0" VerticalAlignment="Top" Width="524" FontSize="32"/>
        <Border  Style="{StaticResource BorderValid}" HorizontalAlignment="Center" Height="48" Margin="0,331,0,0" VerticalAlignment="Top" Width="314" CornerRadius="5,5,5,5">
            <Button Content="Создать первую задачу" HorizontalAlignment="Center" Height="48" VerticalAlignment="Center" Width="254"  Style="{StaticResource ButtonsValid}" Click="Button_Click_SPZ"/>
        </Border>


    </Grid>
</Page>
