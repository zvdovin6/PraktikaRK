<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryColor">#F96060</Color>
    <Color x:Key="CompletedTaskColor">#E7FFED</Color>
    <Color x:Key="SelectedTaskColor">#DDE6F7FF</Color>

    <SolidColorBrush x:Key="CompletedTaskBrush" Color="{StaticResource CompletedTaskColor}"/>
    <SolidColorBrush x:Key="SelectedTaskBrush" Color="{StaticResource SelectedTaskColor}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

    <Style x:Key="TaskListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="ItemBorder"
                     Margin="0,0,0,5"
                     CornerRadius="10"
                     SnapsToDevicePixels="True"
                     Background="White" BorderBrush="{x:Null}">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray"
                                       Direction="270"
                                       BlurRadius="2"
                                       ShadowDepth="3"
                                       Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SelectedTaskBrush}"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource CompletedTaskBrush}"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TaskCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Ellipse x:Name="Ellipse"
                             Fill="{StaticResource TransparentBrush}"
                             Stroke="Blue"
                             StrokeThickness="2"
                             Width="20"
                             Height="20"/>
                        <Image x:Name="CheckImage"
                           Source="/image1/Group 2.png"
                           Width="20"
                           Height="20"
                           Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckImage" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="Ellipse" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Ellipse" Property="Stroke" Value="DodgerBlue"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TaskDetailsBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" Direction="270" BlurRadius="10" ShadowDepth="3" Opacity="0.7"/>
            </Setter.Value>
        </Setter>
    </Style>

    
    <Style TargetType="TextBlock" x:Key="CustomTextBlockStyle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Actor"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="TextDecorations" Value="None"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                <Setter Property="TextDecorations" Value="Strikethrough"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="Border" x:Key="CustomBorderStyle">
        <Setter Property="Background" Value="#FFFFFEFE" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10" />
    </Style>



</ResourceDictionary>